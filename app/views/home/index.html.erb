    <div class ="login">
      <%= form_tag('/solve') do -%>
      <p class="text">
        Email
      </p>
      <div class='form-field'>
        <%=label_tag 'email', '' %>
        <%=text_field_tag 'user[email]'%>
      </div>
      <p class="text">
        Password
      </p>
      <div class='form-field'>
        <%=label_tag 'password', '' %>
        <%=text_field_tag 'user[password]'%>
      </div>
        <div class='form-field'>
          <%= submit_tag 'Log in' %>
        </div>
      <% end -%>
    </div>
    </div>


    <p class="text-block">

      Новый пользователь?
      <%=button_to  'Sign up',  '/window', method: :get%>

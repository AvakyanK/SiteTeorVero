
<div align=" center ">

  <div class="win">


    <div class ="tabl">
      <div class ="login">
        <%= form_tag('/solvesign') do -%>
      <p class="text">
        Name
      </p>
      <div class='form-field'>
        <%=label_tag 'name', '' %>
        <%=text_field_tag 'user[name]'%>
      </div>
      <p class="text">
        Email
      </p>
      <div class='form-field'>
        <%=label_tag 'email', '' %>
        <%=text_field_tag 'user[email]'%>
      </div>
      <p class="text">
        Password
      </p>
      <div class='form-field'>
        <%=label_tag 'password', '' %>
        <%=text_field_tag 'user[password]'%>
      </div>
      <div class='form-field'>
        <%= submit_tag 'Sign up' %>
      </div>

    <% end -%>
  </div>
  </div>


</div>
</div>
